{
  "name": "redbitcz/subreg-api-php",
  "description": "Subreg.cz API client for PHP",
  "keywords": ["subreg", "gransy", "api", "client"],
  "license": ["MIT"],
  "type": "library",
  "authors": [
    {
      "name": "Redbit s.r.o.",
      "homepage": "https://www.redbit.cz"
    },
    {
      "name": "Jakub Bouček",
      "email": "pan@jakubboucek.cz"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-soap": "*",
    "ext-json": "*",
    "psr/log": "^1.1",
    "nette/schema": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "Redbitcz\\SubregApi\\": "src/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.48",
    "symplify/easy-coding-standard": "^8.3.28",
    "nette/tester": "^2.3"
  },
  "scripts": {
    "phpstan": "phpstan analyse src --level 5",
    "ecs": "ecs check src --set psr12",
    "ecs-fix": "ecs check src --set psr12 --fix",
    "tests": "tester tests/"
  }
}
